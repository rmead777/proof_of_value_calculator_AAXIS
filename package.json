{
  "name": "proof-of-value-calculator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n web,api -c cyan,magenta \"npm:dev:web\" \"npm:dev:api\"",
    "dev:web": "vite",
    "dev:api": "cross-env NODE_ENV=development PORT=5174 tsx watch server/server.ts",
    "typecheck": "tsc -p tsconfig.app.json --noEmit && tsc -p tsconfig.server.json --noEmit",
    "test": "vitest run",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=production tsx server/server.ts",
    "pdf:install": "playwright install chromium"
  },
  "dependencies": {
    "docx": "^9.2.1",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "lucide-react": "^0.561.0",
    "marked": "^15.0.8",
    "nodemailer": "^7.0.11",
    "playwright": "^1.50.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "tsx": "^4.20.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^3.2.4"
  }
}
